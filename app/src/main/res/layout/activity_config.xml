<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.spotify.config">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageSpotify"
                    android:layout_width="90dp"
                    android:layout_height="84dp"
                    android:src="@mipmap/icon_spotify_foreground" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-5dp"
                        android:fontFamily="@font/adlam_display"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="vitorhugouau"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="29dp"
                        android:fontFamily="@font/adlam_display"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Ver perfil"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <!-- Lista de opções -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conta"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Economia de dados e modo offline"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reprodução"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conteúdo e tela"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacidade e social"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qualidade de mídia"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notificações"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apps e dispositivos"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sobre"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adlam_display"
                    android:padding="16dp"
                    android:src="@mipmap/ic_arrow_right_foreground"
                    android:tint="@color/white"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSair"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="Sair"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/btn_white_rounded"
                    android:textColor="@color/black" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
